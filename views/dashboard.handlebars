{{!-- Extend the main layout --}}
{{!< main}}

    <div class="container">
        <h2>Your Posts</h2>
        {{#each posts}}
            {{> post showComments=true}}
        {{/each}}

        <h2>Create a New Post</h2>
        <form class="new-post-form">
            <input type="text" id="post-title" placeholder="Post Title" name="title">
            <textarea id="post-content" placeholder="Your post content..." name="content"></textarea>
            <button type="submit">Create Post</button>
        </form>
        <script src="/js/create-post.js"></script>
    </div>
